<JanPop>
    id:pop

    auto_dismiss:False
    title:'January'
    FloatLayout:
        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint: 1, 0.9
            pos_hint: {'x':0, 'y':0.1}

            Label:
                size: self.texture_size
                size_hint: (1, None)
                padding_x: 20
                text: root.data
                text_size: self.width, None
                valign: 'top'

        Button:
            size_hint: 1, 0.1
            text:"Click Here To Dismiss PopUp"
            on_press: pop.dismiss()




