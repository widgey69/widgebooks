<Records>:
    name: 'records'
    orientation: 'vertical'
    FloatLayout
        Camera:
            pos_hint:{'x':0, 'y':0.1}
            size_hint:1,0.9
            id: camera
            index: 0
            play: False

        ToggleButton:
            text: 'Play'
            on_press: camera.play = not camera.play
            size_hint:0.5, 0.1
            height: '48dp'
        Button:
            pos_hint:{'x':0.5,'y':0}
            text: 'Capture'
            size_hint:0.5,0.1
            on_press: root.capture()



