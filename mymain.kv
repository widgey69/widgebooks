
#: import ScrollEffect kivy.effects.scroll.ScrollEffect


WindowManager:
    Income:
    Expense:
    Total:
    History:
    Records:

<Text>
    color: 0, 1, 1, 1
<Button>
    background_color: 1, 1, 0, 1
<Income>:

    name: 'income'
    income: income
    reference: reference
    FloatLayout:

        canvas.before:
            Color:
                rgba: 0.14, 0.24, 0.22, 0.5
            Rectangle:
                # self here refers to the widget i.e BoxLayout
                pos: self.pos
                size: self.size

        Label:
            text: 'Income £'
            size_hint: 0.3, 0.1
            pos_hint: {'x':0, 'y':.8}

        Label:
            text: 'Reference'
            size_hint: 0.3, 0.1
            pos_hint: {'x':0, 'y':.7}

        TextInput:
            id: income
            multiline: False
            size_hint: 0.7, 0.1
            pos_hint: {'x':0.3, 'y':.8}
            on_touch_down: if self.collide_point(*args[1].pos): self.text = ""

        TextInput:
            id: reference
            multiline: False
            size_hint: 0.7, 0.1
            pos_hint: {'x':0.3, 'y':.7}


        Button:
            text: 'Submit'
            size_hint: 1, .2
            pos_hint: {'x':0, 'y':0}
            on_release:
                root.submit() if income.text != '' else None


        Button:
            text: 'Expense'
            size_hint: .2, .1
            pos_hint: {'x':0, 'y':0.9}
            on_release:
                app.root.current = 'expense'

        Button:
            text: 'Total'
            size_hint: .2, .1
            pos_hint: {'x':.2, 'y':0.9}
            on_release:
                app.root.current = 'total'

        Button:
            text: 'History'
            size_hint: .2, .1
            pos_hint: {'x':.4, 'y':0.9}
            on_release:
                app.root.current = 'history'



